---
import Layout from "../layouts/Layout.astro"

import About from "../components/sections/About.astro"
import Education from "../components/sections/Education.astro"
import Experience from "../components/sections/Experience.astro"
import Hero from "../components/sections/Hero.astro"
import Projects from "../components/sections/Projects.astro"
import Skills from "../components/sections/Skills.astro"
import KeyboardManager from "../components/KeyboardManager.astro"

import { basics } from "../../cv.json"
import { Boxes } from "../components/ui/boxes-background"
const { name, label } = basics
---

<Layout title={`Portafolio de ${name} - ${label}`}>
    <main>
      <div class="h-full relative w-full overflow-hidden flex flex-col items-center justify-center rounded-lg">
        <div class="absolute inset-0 w-full h-full z-20 [mask-image:radial-gradient(transparent,white)] pointer-events-none" />
        <Boxes client:load />
        <Hero />  
        <About />
        <Experience />
        <Education />
        <Projects />
        <Skills />
    </div>
    </main>
  <KeyboardManager />
</Layout>

<style>
  main {
    padding: 4rem;
    margin: auto;
    width: 100%;
  }

  @media (width <= 700px) {
    main {
      padding: 2rem;
    }
  }
</style>
